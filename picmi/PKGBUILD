# Maintainer: schuay <jakob.gruber@gmail.com>

pkgname=picmi
pkgver=1.3.5
pkgdesc="A picross and minesweeper clone."
pkgrel=1
arch=('i686' 'x86_64')
url="http://github.com/schuay/${pkgname}/"
license=('GPL')
source=("https://github.com/downloads/schuay/${pkgname}/${pkgname}-$pkgver.tar.bz2")
md5sums=('b03939d32c043f9480edfa7d87986e2b')
depends=('sfml' 'qt' 'boost-libs')
makedepends=('boost' 'cmake')

build() {
  cd ${srcdir}/${pkgname}

  rm -rf ./build
  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX="/usr" ..
  make
}

package() {
  cd ${srcdir}/${pkgname}/build

  make DESTDIR="${pkgdir}" install
}
