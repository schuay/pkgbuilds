# Maintainer: schuay <jakob.gruber@gmail.com>

pkgname=picmi
pkgver=1.3.1
pkgdesc="A picross and minesweeper clone."
pkgrel=1
arch=('i686' 'x86_64')
url="http://github.com/schuay/${pkgname}/"
license=('GPL')
source=("https://github.com/downloads/schuay/${pkgname}/${pkgname}-$pkgver.tar.bz2")
md5sums=('d2b9debadbc28a5784d6ed3c2bb1c0c9')
depends=('sfml' 'qt' 'boost-libs')
makedepends=('boost')

build() {
  cd ${srcdir}/${pkgname}

  qmake
  make setpath	#sets gfx path in source files
  make
}

package() {
  cd ${srcdir}/${pkgname}

  make INSTALL_ROOT=${pkgdir} install
}
