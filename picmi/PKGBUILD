# Maintainer: schuay <jakob.gruber@gmail.com>

pkgname=picmi
pkgver=1.3.0
pkgdesc="A picross and minesweeper clone."
pkgrel=3
arch=('i686' 'x86_64')
url="http://github.com/schuay/${pkgname}/"
license=('GPL')
source=("https://github.com/downloads/schuay/${pkgname}/${pkgname}-$pkgver.tar.bz2")
md5sums=('ea98066aa129e6ea1d21013130c79a95')
depends=('sfml' 'qt' 'boost-libs')
makedepends=('boost')

build() {
  cd ${srcdir}

  # will be fixed in next release
  sed -i 's_thread-mt_thread_' picmi.pro
  sed -i 's_../../../..__g' src/*.ui

  qmake
  make setpath	#sets gfx path in source files
  make
}
package() {
  cd ${srcdir}
  make INSTALL_ROOT=${pkgdir} install
}
