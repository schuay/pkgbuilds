# Maintainer: schuay <jakob.gruber@gmail.com>

pkgname=picmi
pkgver=1.3.2
pkgdesc="A picross and minesweeper clone."
pkgrel=1
arch=('i686' 'x86_64')
url="http://github.com/schuay/${pkgname}/"
license=('GPL')
source=("https://github.com/downloads/schuay/${pkgname}/${pkgname}-$pkgver.tar.bz2")
md5sums=('4fdfe8a300373934877a70ae9643324c')
depends=('sfml' 'qt' 'boost-libs')
makedepends=('boost' 'cmake')

_builddir="${srcdir}/${pkgname}-build"

build() {
  rm -rf "${_builddir}" && mkdir "${_builddir}"
  cd "${_builddir}"

  cmake \
    -DCMAKE_BUILD_TYPE="Release" \
    -DCMAKE_INSTALL_PREFIX="${pkgdir}/usr" \
	-DPREFIX="/usr/" "${srcdir}/${pkgname}"
  make
}

package() {
  cd ${srcdir}/${pkgname}

  make install
}
