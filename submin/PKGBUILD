pkgname=submin
pkgver=1.2.10
pkgdesc="Web frontend for subversion/trac administration."
pkgrel=1
arch=('any')
url="http://supermind.nl/submin/index.html"
license=('MIT')
depends=('subversion' 'python' 'apache')
source=("http://supermind.nl/submin/current/$pkgname-$pkgver.tar.gz")
md5sums=('83e3eb6e2243d5e20d8cbf08ecd0290a')

build() {

  cd $srcdir/$pkgname-$pkgver

  #install to pkgdir/usr but hardcode paths to /usr (see comment in src/bin/install.sh)
  python bin/install.py $pkgdir/usr /usr || exit 1

  mkdir -p $pkgdir/usr/share/man/man1
  cp man/submin-admin.1 $pkgdir/usr/share/man/man1/

}
