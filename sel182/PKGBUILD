# Maintainer: schuay <jakob.gruber@gmail.com>

pkgname=sel182
_pkgname=SE
pkgver=4.12
pkgrel=1
pkgdesc="Sequencer/event counter library used by the systems programming course at the Technical University Vienna"
arch=('x86_64' 'i686')
url="http://ti.tuwien.ac.at/rts/teaching/courses/systems_programming/download"
license=('unknown')
source=("http://pan.vmars.tuwien.ac.at/SE.tgz"
        "Makefile.patch")
md5sums=('286d10fc204967796e93076eb4def7d3'
         '3cb491ea16c426b02e1ae328656c9e54')

build() {
  cd "$srcdir/$_pkgname"

  patch -Np1 < "$srcdir"/Makefile.patch
  make
}

package() {
  cd "$srcdir/$_pkgname"

  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
