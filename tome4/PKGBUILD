pkgname=tome4
pkgver='1.0.0beta15b'
pkgrel=1
pkgdesc="An open-source, single-player, role-playing roguelike game set in the world of JRR Tolkien. Complete rewrite of ToME."
arch=('i686' 'x86_64')
url="http://tome.te4.org/"
license=('GPL3')
depends=('mesa' 'sdl_image' 'sdl_ttf' 'sdl_mixer')
makedepends=('premake4')
source=("http://te4.org/dl/t-engine/t-engine4-src-${pkgver}.tar.bz2"
        'tome4')
md5sums=('f8fd0a15355e8148b09378aec32c9ee5'
         'b68d32df2bd15eb34deeb72eecad35b6')

build() {
    cd "${srcdir}/t-engine4-src-$pkgver"

    premake4 gmake
    make
}
package() {
    cd "${srcdir}/t-engine4-src-$pkgver"

    install -d "${pkgdir}/opt/tome4/"

    cp -r bootstrap/ game/ CONTRIBUTING COPYING CREDITS bin/Debug/t-engine \
        "${pkgdir}/opt/tome4/"

    install -Dm755 "${srcdir}/${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}

