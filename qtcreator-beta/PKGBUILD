pkgname=qtcreator-beta
pkgver=2.0.0
pkgrel=1
_qtver=4.7.0-beta2
pkgdesc="Lightweight, cross-platform integrated development environment"
arch=('i686' 'x86_64')
url="http://trolltech.com/developer/qt-creator"
license=('LGPL')
makedepends=()
depends=('qt-beta')
optdepends=('qt-doc: for the integrated Qt documentation'
            'gdb: for the debugger')
options=(docs)
source=("http://get.qt.nokia.com/qtcreator/qt-creator-${pkgver}-src.zip"
	"http://get.qt.nokia.com/qt/source/qt-everywhere-opensource-src-${_qtver}.tar.gz")
md5sums=('3459ed5313115fddffbe2bba5d332799'
	 '1449443c2d33ab9fefbd37b7104d0cdf')

build() {
  cd "${srcdir}/qt-everywhere-opensource-src-${_qtver}"
  touch ".qmake.cache"
  cd "${srcdir}/qt-creator-${pkgver}-src"

  export QTDIR="${srcdir}/qt-everywhere-opensource-src-${_qtver}"
  
  if [ -d ${srcdir}/build ]; then
  rm -rf ${srcdir}/build
  fi
  
  mkdir ${srcdir}/build
  cd ${srcdir}/build
  mkdir -p share/doc/qtcreator
  touch share/doc/qtcreator/qtcreator.qch


  #cp -f ${srcdir}/../debuggerrunner.cpp ${srcdir}/qt-creator-${pkgver}-src/src/plugins/debugger/
  /opt/qt-beta2/bin/qmake ${srcdir}/qt-creator-${pkgver}-src/qtcreator.pro -o Makefile || return 1
  make || return 1 
  
  export LD_LIBRARY_PATH=/opt/qt-beta2/lib:$LD_LIBRARY_PATH
  make INSTALL_ROOT="${pkgdir}/opt/" install || return 1
  install -Dm755 ${srcdir}/../qtcreator ${pkgdir}/opt/bin/qtcreator
  install -Dm644 ${srcdir}/../qtcreator.desktop ${pkgdir}/opt/share/applications/qtcreator.desktop
  install -Dm644 ${srcdir}/qt-creator-${pkgver}-src/LGPL_EXCEPTION.TXT ${pkgdir}/opt/share/licenses/qtcreator/LGPL_EXCEPTION.TXT
}


