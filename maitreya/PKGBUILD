# Contributor: schuay <jakob dot gruber at gmail dot com>

pkgname=maitreya
pkgver=6.0_dev_2
pkgrel=1
pkgdesc="A free software for Vedic and western astrology"
arch=(i686 x86_64)
license=('GPL')
url="http://www.saravali.de/maitreya/index.html"
depends=('wxgtk')
source=(http://prdownloads.sourceforge.net/$pkgname/${pkgname}6-${pkgver//_/-}.tar.bz2)
install=maitreya.install
md5sums=('732829ff0fe53b095aaeca8985a7d7a7')

build() {
  cd $srcdir/${pkgname}6-${pkgver//_/-}

  # the default build flags "-Wl, --as-needed" don't work, override them
  ./configure --prefix=/usr LDFLAGS="-Wl,--hash-style=gnu" || return 1
  make || return 1
  make DESTDIR=$pkgdir install || return 1
}
