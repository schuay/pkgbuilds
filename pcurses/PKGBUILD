# Maintainer: schuay <jakob.gruber@gmail.com>

pkgname=pcurses
pkgver=1.0
pkgrel=1
pkgdesc='A curses package browser using libalpm'
arch=('x86_64' 'i686')
url="https://github.com/schuay/$pkgname"
license=('GPL')
depends=('ncurses' 'pacman')
makedepends=('boost' 'cmake')
source=("https://github.com/downloads/schuay/$pkgname/$pkgname-$pkgver.tar.bz2")
md5sums=('834e120b9febeb2923c7f7fb60ffb528')

build() {
  rm -rf "$srcdir/$pkgname-build"
  mkdir "$srcdir/$pkgname-build"
  cd "$srcdir/$pkgname-build"

  cmake -DCMAKE_INSTALL_PREFIX=/usr "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-build"
  make DESTDIR="${pkgdir}" install
}

# vim:set ts=2 sw=2 et:
