# Maintainer: schuay <jakob.gruber@gmail.com>

pkgname=sem182
pkgver=2.2
pkgrel=1
pkgdesc="Semaphore library used by the systems programming course at the Technical University Vienna"
arch=('x86_64' 'i686')
url="http://ti.tuwien.ac.at/rts/teaching/courses/systems_programming/download"
license=('unknown')
source=("http://pan.vmars.tuwien.ac.at/sem182.tgz"
        "Makefile.patch")
md5sums=('24116212689b45b2fb41ebdd3f2a716f'
         '57cbe89c15ce6264f9956a85a85a854e')

build() {
  cd "$srcdir/$pkgname"

  patch -Np1 < "$srcdir"/Makefile.patch
  make
}

package() {
  cd "$srcdir/$pkgname"

  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
